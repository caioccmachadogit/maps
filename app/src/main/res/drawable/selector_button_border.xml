<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/redimonitoreSelected" android:startColor="@color/redimonitoreSelected" />
            <stroke android:width="0dp" android:color="@color/redimonitoreSelected" />
            <corners android:radius="16dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/redimonitoreUnSelected" android:startColor="@color/redimonitoreUnSelected" />
            <stroke android:width="0dp" android:color="@color/redimonitoreUnSelected" />
            <corners android:radius="16dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

</selector>